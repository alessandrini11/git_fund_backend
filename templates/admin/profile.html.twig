{% extends 'adminbase.html.twig' %}
{% block title %} profile{% endblock %}
{% block body %}
    <div class="">
        <div class="flex">
            <section class="h-screen w-1/3">
                <div class="w-11/12 mx-auto text-center">
                    <div class="mt-5">
                        <div style="padding-bottom: 100%;" class="mb-5 relative h-0">
                            <img class="absolute inset-0 h-full w-full object-cover rounded-full" src="https://images.pexels.com/photos/4565508/pexels-photo-4565508.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" alt="">
                        </div>
                        <p>{{ adherent.nom }} {{ adherent.prenom }}</p>
                        <p>{{ adherent.sexe.nom }}</p>
                        <p>{{ adherent.filiere.nom}}</p>
                        <p>{{ adherent.matricule}}</p>
                        <p>{{ adherent.poste.nom}}</p>
                    </div>

                </div>
            </section>
            <section class="flex-1">
                <div class="w-11/12 mx-auto">
                    <div class="my-5">
                        <div class="flex flex-col content-center w-2/4 h-20 p-2 bg-green-500 text-white shadow">
                            <p>DÃ©pots <i class="fa fa-plus"></i></p>
                            {% set total = 0 %}
                            {% for depot in adherent.depots %}
                                {% set total = total + depot.somme.nom %}
                            {% endfor %}

                            <p class="mt-auto ml-auto">
                                {{ total }} XAF
                            </p>
                        </div>
                    </div>
                    <div class="">
                        <table class="w-full text-center bg-white">
                            <thead class="bg-black text-white">

                            <tr>
                                <th>Somme</th>
                                <th>Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for depot in adherent.depots %}
                                <tr class="{% if loop.index is even %}bg-gray-300{% endif %}">
                                    <td>{{ depot.somme.nom}}</td>
                                    <td> {{ depot.createdAt | date('d M Y') }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </section>

        </div>
    </div>
{% endblock %}



