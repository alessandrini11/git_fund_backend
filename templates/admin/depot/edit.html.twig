                <div class="">
                    <button class="bg-green-600 text-white py-1 px-3 w-full " type="submit">Modifier</button>
                </div>
            {{ form_end(form) }}
        </div>

    <a class="text-blue-500" href="{{ path('depot_index') }}">retour </a>
    </div>

{% endblock %}
