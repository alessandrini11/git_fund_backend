                <li><a href="{{path('admin')}}">Dashboard</a></li>
                <li><a href="{{ path('depot_index') }}">Dépots</a></li>
                <li><a href="{{path('depense_index')}}">Dépenses</a></li>
                <li><a href="{{path('adherent_index')}}">Adhérents</a></li>
            </ul>
            <div class="relative">
                <div class="text-white flex items-center">
                    <a href="{{ path('home') }}" class=" mr-10">Home</a>
